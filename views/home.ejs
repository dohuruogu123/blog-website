
<%- include("partials/header"); -%>
  <h1>Home</h1>
  <p> <%= startingContent %> </p>

  <a href="/compose">Create a post</a>

  <% posts.forEach(function(post) { %>

    <a href="/posts/<%=post.title%>"><h1> <%= post.title %> </h1></a>
    <% if (post.content.length > 100) { %>
    <% let truncPost = post.content.substring(0, 100) %>
    <p> <%= truncPost %> <a href="/posts/<%=post._id%>">...Read More</a></p>
    <% } else { %>
    <p> <%= post.content %> </p>
    <% } %>

  <% }); %>
  <%# forEach loop needs to be changed around a bit %>


<%- include("partials/footer"); -%>
